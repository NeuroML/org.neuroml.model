<SimulationSet id="sim1">
	<Display id="disp1" title="Ex8: Adaptive exponential cell: 2 spike burst" xmin="0" xmax="300" ymin="-90" ymax="50"/>

	<Simulation id="sim1" length="300ms" step="0.005ms" target="net1" display="disp1">
    	<DisplayList timeScale="1ms" title="Ex8: Adaptive exponential cell: 2 spike burst">

        <Line id="l1" quantity="adExPop1[0]/v" scale="1mV"  color="#f33fff" timeScale="1ms"/>
        <Line id="l2" quantity="adExPop1[0]/w" scale="0.01nA"  color="#f3aaaf" timeScale="1ms"/>
    	</DisplayList>
	</Simulation>
</SimulationSet>

</Lems>