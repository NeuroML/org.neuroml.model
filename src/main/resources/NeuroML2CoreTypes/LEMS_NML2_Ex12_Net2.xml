    <SimulationSet id="sim1">
        <Display id="disp1" title="Ex12: iafPop" xmin="0" xmax="300" ymin="-90" ymax="60"/>

        <Simulation id="sim1" length="300ms" step="0.01ms" target="net2" display="disp1">

            <DisplayList timeScale="1ms" title="Ex12: iafPop">

                <Line id ="l1" quantity="iafPop[0]/v" scale="1mV"  color="#f33fff" timeScale="1ms"/>
                <Line id ="l2" quantity="iafPop[1]/v" scale="1mV"  color="#BBA0AA" timeScale="1ms"/>
                <Line id ="l3" quantity="iafPop[2]/v" scale="1mV"  color="#BBFFAA" timeScale="1ms"/>
