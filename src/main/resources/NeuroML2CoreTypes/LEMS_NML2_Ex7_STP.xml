    <SimulationSet id="sim1">
        <Display id="disp1" title="Ex7: Cells with STP synapse: voltage" xmin="0" xmax="300" ymin="-56" ymax="-48"/>

        <Simulation id="sim1" length="300ms" step="0.01ms" target="net2" display="disp1">

            <DisplayList timeScale="1ms" title="Ex7: Cells with STP synapse: voltage">
                <Line id="l1" quantity="pasPop[0]/v" scale="1mV"  color="#000000" timeScale="1ms"/>
                <Line id="l2" quantity="pasPop[1]/v" scale="1mV"  color="#0000FF" timeScale="1ms"/>
                <Line id="l3" quantity="pasPop[2]/v" scale="1mV"  color="#ff0000" timeScale="1ms"/>
            </DisplayList>

        </Simulation>
