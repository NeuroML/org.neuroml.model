<SimulationSet id="sim1">
	<Display id="disp1" title="Ex2: Bursting Izhikevich cell in LEMS" xmin="0" xmax="200" ymin="-90" ymax="50"/>

	<Simulation id="sim1" length="200ms" step="0.005ms" target="net1" display="disp1">
    	<DisplayList timeScale="1ms" title="Ex2: Bursting Izhikevich cell in LEMS">

        <Line id="l1" quantity="izpopBurst[0]/v" scale="1mV"  color="#f33fff" timeScale="1ms"/>
        <Line id="l2" quantity="izpopBurst[0]/U" scale="1"  color="#f3aaaf" timeScale="1ms"/>
    	</DisplayList>
	</Simulation>
</SimulationSet>

</Lems>